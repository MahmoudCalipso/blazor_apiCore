@using AtelierRestApi.Model
@page "/"
@inherits EmployeeListBase




<h3>Employee List</h3>
@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card-deck">
        @foreach (var employee in employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                <div class="card-header">
                    <h3> @employee.FirstName @employee.FirstName </h3>
                </div>
                <img class="card-img-top imageThubnail" src="@employee.PhotoPath" />

                <div class="card-footer text-center">
                    <a href="@($"EmployeeDetails/{employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn-primary m-1">Edit</a>
                    <a href="#" class="btn-danger m-1">Delete</a>
                </div>
            </div>

        }
    </div>

}








